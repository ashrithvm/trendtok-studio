# Environment Configuration
# Copy this file to .env and fill in your actual API keys and credentials

# LlamaAPI Key (get from https://www.llama-api.com/)
LLAMA_API_KEY=your_llama_api_key_here

# Google Drive Service Account File Path
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/your/service_account.json

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your_flask_secret_key_here
